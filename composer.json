{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "fakerphp/faker": "^1.24",
        "filament/filament": "^4.1.1",
        "filament/spatie-laravel-media-library-plugin": "^4.1.1",
        "laravel-lang/common": "^6.7.1",
        "laravel/framework": "^12.32.5",
        "laravel/tinker": "^2.10.1",
        "league/flysystem-aws-s3-v3": "^3.29"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.6",
        "larastan/larastan": "^3.7.2",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.25.1",
        "laravel/telescope": "^5.13.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "pestphp/pest": "^3.8.4",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files" : [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan lang:update"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"npm run dev\" --names='server,queue,vite'"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "format": [
            "./vendor/bin/pint --quiet",
            "@php artisan clear-compiled --quiet",
            "npm run format -- --log-level silent",
            "composer ide-helper"
        ],
        "ide-helper": [
            "@php artisan ide-helper:generate --quiet",
            "@php artisan ide-helper:meta --quiet",
            "@php artisan ide-helper:models --nowrite --quiet",
            "@php artisan lang:models-helper --quiet"
        ],
        "update-dependencies": [
            "composer update",
            "composer bump",
            "npx npm-check-updates -u",
            "npm install",
            "composer format",
            "git add .",
            "git commit -m \"chore: update and bump dependencies\""
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
